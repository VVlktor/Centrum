<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Centrum.Pages.BluetoothPage"
             Title="BluetoothPage">
    <StackLayout Orientation="Vertical">
        <Entry x:Name="glownyEntry"/>
        <Label x:Name="czyPolaczylo"/>
        <Button Clicked="WyslijKomende" Text="Wyslij"/>
        <StackLayout Orientation="Horizontal">
            <Label VerticalOptions="Center" Text="Pin -" FontSize="24" Margin="10"/>
            <Picker x:Name="PinMessage" HorizontalOptions="StartAndExpand" Margin="5" FontSize="24">
                <Picker.Items>
                    <x:String>Włącz</x:String>
                    <x:String>Wyłącz</x:String>
                </Picker.Items>
            </Picker>
            <CheckBox x:Name="isPinRequest" IsChecked="False" HorizontalOptions="End" Margin="5"/>
        </StackLayout>
        
        <StackLayout Orientation="Horizontal">
            <Label VerticalOptions="Center" Text="Ekran -" FontSize="24" Margin="10"/>
            <Entry x:Name="LcdMessage" WidthRequest="100" HorizontalOptions="Center"/>
            <CheckBox x:Name="isLcdRequest" IsChecked="False" HorizontalOptions="End" Margin="5"/>
        </StackLayout>
    </StackLayout>
</ContentPage>