<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Centrum.Pages.PageOfNews"
             Title="News"
             NavigationPage.HasBackButton="True"
             NavigationPage.HasNavigationBar="True"
             NavigationPage.IconColor="Black">
    <ScrollView>
        <StackLayout>
            <StackLayout Margin="20" >
                <Label Text="Tytul" x:Name="NewsLabelTitle" HorizontalOptions="Center" FontAttributes="Bold" FontSize="24"/>
                <Border WidthRequest="350" HeightRequest="250" Margin="0,10,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20" />
                    </Border.StrokeShape>
                    <Image Aspect="AspectFill" x:Name="NewsImage" />
                </Border>
                <Label Text="Data" x:Name="NewsLabelDate" FontAttributes="Bold" Margin="0,5,0,0"/>
            </StackLayout>
            <Label Margin="15" FontSize="16" Text="Treść" x:Name="NewsLabelText"/>
            <Label Text="Autor" x:Name="NewsLabelAuthors" FontSize="16" Margin="5" FontAttributes="Bold"/>
        </StackLayout>
    </ScrollView>
</ContentPage>